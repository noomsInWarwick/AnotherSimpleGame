<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/piggy_backdrop_autumn"
    app:titleTextColor="@color/colorAccentLight"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/details_fragment"
        class="com.example.anothersimplegame.FragmentToolBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:background="@color/colorAccentLight"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout="@layout/fragment_tool_bar_constrained" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="84dp" />

    <ImageView
        android:id="@+id/orangeSeven"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/orange"
        android:src="@drawable/fruit_orange_trans"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toStartOf="@+id/timerTextView"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mainConstraint" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="106dp"
        android:layout_height="38dp"
        android:text="timer: 10"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@+id/horizontalGuideline" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="381dp"
        android:layout_height="415dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/snowmanImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerTextView">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:contentDescription="@string/piggysnake"
            android:cropToPadding="false"
            android:onClick="increaseScore"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:soundEffectsEnabled="true"
            app:layout_column="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="0"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:contentDescription="@string/piggysnake"
            android:onClick="increaseScore"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_column="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="0"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:contentDescription="@string/piggysnake"
            android:onClick="increaseScore"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_column="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="0"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:contentDescription="@string/piggysnake"
            android:onClick="increaseScore"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_column="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="1"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/fallingleaf_one"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="36dp"
            android:contentDescription="@string/redleaf"
            android:src="@drawable/leaf_red"
            android:visibility="invisible"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/orangeOne"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="56dp"
            android:contentDescription="@string/orange"
            android:src="@drawable/fruit_orange_trans"
            android:visibility="invisible"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/orangeTwo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="45dp"
            android:contentDescription="@string/orange"
            android:src="@drawable/fruit_orange_trans"
            android:visibility="invisible"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/orangeThree"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/orange"
            android:src="@drawable/fruit_orange_trans"
            android:visibility="invisible"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/orangeFour"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="36dp"
            android:contentDescription="@string/orange"
            android:src="@drawable/fruit_orange_trans"
            android:visibility="invisible"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/orangeFive"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="22dp"
            android:contentDescription="@string/orange"
            android:src="@drawable/fruit_orange_trans"
            android:visibility="invisible"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/orangeSix"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/orange"
            android:src="@drawable/fruit_orange_trans"
            android:visibility="invisible"
            app:layout_column="2"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:contentDescription="@string/piggysnake"
            android:onClick="increaseScore"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_column="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="1"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:contentDescription="@string/piggysnake"
            android:onClick="increaseScore"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_column="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="1"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/fallingleaf_two"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/greenleaf"
            android:src="@drawable/leaf_green"
            android:visibility="invisible"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:contentDescription="@string/piggysnake"
            android:onClick="increaseScore"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_column="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="2"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:contentDescription="@string/piggysnake"
            android:onClick="increaseScore"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_column="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="2"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/fallingleaf_three"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/purpleleaf"
            android:src="@drawable/leaf_purple"
            android:visibility="invisible"
            app:layout_column="2"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/fallingleaf_four"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="36dp"
            android:contentDescription="@string/yellowleaf"
            android:src="@drawable/leaf_yellow"
            android:visibility="invisible"
            app:layout_column="2"
            app:layout_row="2" />


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:contentDescription="@string/piggysnake"
            android:onClick="increaseScore"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_column="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="2"
            app:srcCompat="@drawable/piggysnake" />

    </androidx.gridlayout.widget.GridLayout>

    <ImageButton
        android:id="@+id/playAgainButton"
        android:layout_width="68dp"
        android:layout_height="79dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="@string/playagain"
        android:onClick="doRestart"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scoreTextView"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:srcCompat="@drawable/repeat" />

    <ImageView
        android:id="@+id/snowmanImageView"
        android:layout_width="93dp"
        android:layout_height="88dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="14dp"
        android:contentDescription="@string/snowman"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:srcCompat="@drawable/snowman_trans"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="82dp"
        android:layout_height="35dp"
        android:gravity="right"
        android:text="@string/score"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scoreValueView"
        app:layout_constraintHorizontal_bias="0.983"
        app:layout_constraintStart_toEndOf="@+id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.583" />

    <TextView
        android:id="@+id/scoreValueView"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:gravity="left"
        android:paddingLeft="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/scoreTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/scoreTextView"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.509" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="129dp" />


</androidx.constraintlayout.widget.ConstraintLayout>