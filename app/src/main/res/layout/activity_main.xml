                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:srcCompat="@drawable/piggysnake" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

