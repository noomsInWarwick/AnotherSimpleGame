<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraint"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/piggy_backdrop_autumn"
    android:orientation="vertical"
    app:titleTextColor="@color/colorAccentLight"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/details_fragment"
        class="com.example.anothersimplegame.fragments.FragmentToolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ps_toolbar_height"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        tools:layout="@layout/fragment_tool_bar_constrained" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ps_toolbar_height"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/timer_fragment"
            class="com.example.anothersimplegame.fragments.FragmentTimerMessages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:orientation="horizontal"
            android:textAlignment="center"
            tools:layout="@layout/fragment_timer_n_messages" />
    </LinearLayout>

    <!-- <Space
         android:layout_width="match_parent"
         android:layout_height="25dp"></Space> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <ImageView
            android:id="@+id/fallingleaf_one"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/redleaf"
            android:src="@drawable/leaf_red"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/fallingleaf_two"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/greenleaf"
            android:src="@drawable/leaf_green"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:onClick="increaseScore"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:onClick="increaseScore"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:onClick="increaseScore"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:srcCompat="@drawable/piggysnake" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:onClick="increaseScore"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:onClick="increaseScore"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:onClick="increaseScore"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:srcCompat="@drawable/piggysnake" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:onClick="increaseScore"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:onClick="increaseScore"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:srcCompat="@drawable/piggysnake" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:onClick="increaseScore"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:srcCompat="@drawable/piggysnake" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/score"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_font_size"
        android:textStyle="bold"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/start_again_fragment"
            class="com.example.anothersimplegame.fragments.FragmentStartAgain"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:visibility="visible"
            tools:layout="@layout/fragment_start_again" />

        <fragment
            android:id="@+id/snowman_fragment"
            class="com.example.anothersimplegame.fragments.FragmentSeasonCharacter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:orientation="horizontal"
            android:textAlignment="textStart"
            android:visibility="visible"
            tools:layout="@layout/fragment_season_character" />
    </LinearLayout>

</LinearLayout>