    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/score"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_font_size"
        android:textStyle="bold"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ps_snowman_fragment_image_height"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/start_again_fragment"
            class="com.example.anothersimplegame.fragments.FragmentStartAgain"
            android:layout_width="@dimen/ps_snowman_fragment_image_width"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:visibility="visible"
            tools:layout="@layout/fragment_start_again" />

        <fragment
            android:id="@+id/snowman_fragment"
            class="com.example.anothersimplegame.fragments.FragmentSeasonCharacter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:orientation="horizontal"
            android:textAlignment="textStart"
            android:visibility="visible"
            tools:layout="@layout/fragment_season_character" />
