<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraint"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/piggy_backdrop_autumn"
    android:orientation="vertical"
    app:titleTextColor="@color/colorAccentLight"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/details_fragment"
        class="com.example.anothersimplegame.fragments.FragmentToolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ps_toolbar_height"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        tools:layout="@layout/fragment_tool_bar_constrained" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ps_message_spaces_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/orangeOne"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:paddingStart="25dp"
            android:src="@drawable/fruit_orange_trans"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ps_toolbar_height"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/timer_fragment"
            class="com.example.anothersimplegame.fragments.FragmentTimerMessages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:orientation="horizontal"
            android:textAlignment="center"
            tools:layout="@layout/fragment_timer_n_messages" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp">

        <Space
            android:layout_width="65dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/orangeTwo"
            android:layout_width="45dp"
            android:layout_height="15dp"
            android:paddingStart="25dp"
            android:paddingTop="5dp"
            android:src="@drawable/fruit_orange_trans"
            android:visibility="invisible" />

        <Space
            android:layout_width="125dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/orangeFour"
            android:layout_width="45dp"
            android:layout_height="15dp"
            android:contentDescription="@string/orange"
            android:paddingBottom="5dp"
            android:src="@drawable/fruit_orange_trans"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ps_baselayout_height"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:onClick="increaseScore"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:srcCompat="@drawable/piggysnake" />

            <ImageView
                android:id="@+id/orangeSix"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:paddingStart="25dp"
                android:src="@drawable/fruit_orange_trans"
